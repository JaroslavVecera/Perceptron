<Window x:Class="Perceptron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Perceptron" xmlns:view="clr-namespace:Perceptron.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{StaticResource ResourceKey=PrimaryColor}" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <RadioButton Style="{StaticResource ResourceKey=MainMenuButton}"
                         Content="Direct Input"
                         IsChecked="True">
            </RadioButton>
            <RadioButton Style="{StaticResource ResourceKey=MainMenuButton}"
                         Content="Image Input">
            </RadioButton>
        </StackPanel>

        <Canvas Grid.Column="1">
            <TextBox Canvas.Left="50" Canvas.Top="150" Style="{StaticResource InputBox}" />
            <TextBox Canvas.Left="50" Canvas.Top="200" Style="{StaticResource InputBox}" />
            <TextBox Canvas.Left="50" Canvas.Top="250" Style="{StaticResource InputBox}" />
            <view:CurvedEdge MaxArcRadius="20" StrokeThickness="2" Source="70,170" Sink="200,200">
                <view:CurvedEdge.Stroke>
                    <SolidColorBrush Color="{StaticResource NodeColor}" />
                </view:CurvedEdge.Stroke>
            </view:CurvedEdge>
            <view:CurvedEdge MaxArcRadius="20" StrokeThickness="2" Source="70,220" Sink="200,200">
                <view:CurvedEdge.Stroke>
                    <SolidColorBrush Color="{StaticResource NodeColor}" />
                </view:CurvedEdge.Stroke>
            </view:CurvedEdge>
            <view:CurvedEdge MaxArcRadius="20" StrokeThickness="2" Source="70,270" Sink="200,200">
                <view:CurvedEdge.Stroke>
                    <SolidColorBrush Color="{StaticResource NodeColor}" />
                </view:CurvedEdge.Stroke>
            </view:CurvedEdge>
        </Canvas>
    </Grid>
</Window>
